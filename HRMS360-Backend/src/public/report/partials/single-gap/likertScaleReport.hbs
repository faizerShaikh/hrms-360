<script>
  const renderChart = (data, id,raters) => {
    const option = {
      series: [{ data }],
      chart: {
        stacked: "likert",
        type: "bar",
        height: 200,
        toolbar: {
          show: false,
        },
        animations: {
          enabled: false,
        },
      },
      tooltip: {
        enabled: false,
      },
      grid: {
        show: true,
        strokeDashArray: 5,
        xaxis: {
          lines: {
            show: false,
          },
        },
        yaxis: {
          lines: {
            show: true,
          },
        },
      },
      stroke: {
        colors: ["transparent"],
        width: 3,
      },
      plotOptions: {
        bar: {
          distributed: true,
          borderRadius: 2,
          columnWidth: "40%",

          dataLabels: {
            position: "top",
          },
        },
      },
      dataLabels: {
        enabled: true,
        offsetY: -15,
        style: {
          colors: ["#242424"],
          fontSize: "8px",
          fontFamily: '"Aller", "sans-serif"',
          fontWeight: 300,
        },
      },
      legend: {
        show: false,
      },
      yaxis: {
        axisBorder: {
          show: true,
        },
        min: 0,
        max: 6,
        tickAmount: 5,
        floating: true,
        labels: {
          show: true,
          align: "right",
          minWidth: 20,
          maxWidth: 20,
          style: {
            colors: "#52606d",
            fontSize: "8px",
            fontFamily: '"Aller", "sans-serif"',
          },
        },
      },
      colors: [
        "#6CBE45",
        "#A5D05D",
        "#D5E27C",
        "#FFF5A0",
        "#F8BC6C",
        "#EC7F53",
        "#DE425B",
      ],
      xaxis: {
        tooltip: {
          enabled: true,
        },
        categories: raters,
        axisTicks: {
          show: false,
        },
        offsetY: -10,
        labels: {
          rotate: 0,
          style: {
            colors: "#52606d",
            fontSize: "8px",
            fontFamily: '"Aller", "sans-serif"',
          },
        },
      },
    };
    var chart = new ApexCharts(
      document.querySelector("#likertScaleQuestion" + id),
      option
    );
    chart.render();
  };
</script>
  <div class="dont-break w-[210mm] min-h-[297mm] h-full mx-auto aller p-5">
      <div class="border p-5 relative h-full min-h-[297mm]">
        <div class="absolute top-0 right-0">
          <img
            src="/report/single-gap/images/reportRightCurv.png"
            width="59px"
            alt="right-curv"
            height="59px"
          />
        </div>
      <div class="">
        <h3 class="text-[#242424] century-gothic text-base border-b">
          Response Type : Likert Scale
        </h3>
        {{#each likertScale as |question|}} 
        
        {{#isSameCompetency @index
        question.competency.title ../likertScale}}
        <h2 class="text-[#1C9CF6] text-sm font-semibold mt-10 aller">
          {{question.competency.title}}
        </h2>
        {{/isSameCompetency}}
        <div class="mt-5 break-inside-avoid-page">
          <p class="fc-dark question text-xs border-b pb-2 aller">
            Q{{concat @index 1}} {{question.text}}
          </p>
          <div class="flex justify-between items-center mt-3">
            <div class="w-[49%]">
              <div id={{concat 'likertScaleQuestion' @index}}></div>
              <script>
                renderChart({{{question.scores1}}},{{@index}},{{{question.names1}}})
              </script>
            </div>
            <div class="w-[49%]">
              <table class="w-full" aria-label="simple table">
                <thead>
                  <tr>
                    <td
                      class="text-[#242424] text-center w-[80px] text-[10px] py-[3px] bg-[#EFEFEF]"
                    ></td>
                    {{{../raters}}}
                  </tr>
                </thead>
                <tbody>
                  {{#each question.responses as | response |}}
                  <tr class="border-b">
                    <td
                      class="py-[5px] px-3 text-[10px] text-[#242424] border-b-0 aller"
                    >
                      R{{concat @index 1}}
                    </td>
                    {{{renderRows ../../categories response}}}
                  </tr>
                  {{/each}}
                </tbody>
              </table>
            </div>
          </div>
          <div class="flex justify-start flex-wrap p-2 items-start bg-primary-light">
             {{#each question.responses as | response |}}
<div
            
            class='fc-dark text-[10px] w-1/3 px-3 my-1 aller'
          >
            <span class='text-primary aller'>R{{concat @index 1}}</span> -
            {{response.label}} ({{response.score}})
          </div>
          
          {{/each}}
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
