<script>
  const renderMultipleChoiceChart = (data, id, raters) => {
    const options = {
      series: data,
      chart: {
        type: "bar",
        height: 250,
        stacked: true,
        toolbar: {
          show: false,
        },
        zoom: {
          enabled: false,
        },
      },
      responsive: [
        {
          breakpoint: 480,
          options: {
            legend: {
              position: "bottom",
              offsetX: -10,
              offsetY: 0,
            },
          },
        },
      ],
      plotOptions: {
        bar: {
          horizontal: false,
          columnWidth: "50%",
        },
      },
      dataLabels: {
        enabled: true,
        style: {
          colors: ["#242424"],
          fontSize: "10px",
        },
      },
      colors: [
        "#6CBE45",
        "#FFA600",
        "#A5D05D",
        "#D5E27C",
        "#F8BC6C",
        "#DE425B",
      ],
       yaxis: {
        axisBorder: {
          show: true,
        },
        min: 0,
        max: 6,
        tickAmount: 5,
        floating: true,
        labels: {
          show: true,
          align: "right",
          minWidth: 20,
          maxWidth: 20,
          style: {
            colors: "#52606d",
            fontSize: "10px",
            fontFamily: '"Aller", "sans-serif"',
          },
        },
      },
       xaxis: {
        tooltip: {
          enabled: true,
        },
        categories: raters,
        axisTicks: {
          show: false,
        },
        offsetY: -10,
        labels: {
          rotate: 0,
          style: {
            colors: "#52606d",
            fontSize: "10px",
            fontFamily: '"Aller", "sans-serif"',
          },
        },
      },
      legend: {
        show: true,
        position: "top",
        horizontalAlign: "right",
        formatter:(seriesName,options)=>{
          if(['Yes','No'].includes(seriesName)){
            return seriesName
          }
          return `R${options.seriesIndex+1}`
        }
      },
      fill: {
        opacity: 1,
      },
    };

    var chart = new ApexCharts(
      document.querySelector("#multipleChoiceQuestion" + id),
      options
    );
    chart.render();
  };
</script>
  <div class="dont-break w-[210mm] min-h-[297mm] h-full mx-auto aller p-5">
      <div class="border p-5 relative h-full">
        <div class="absolute top-0 right-0">
          <img
            src="/report/single-gap/images/reportRightCurv.png"
            width="59px"
            alt="right-curv"
            height="59px"
          />
        </div>
      <div class="">
        <h3 class="text-[#242424] century-gothic text-base border-b">
          Response Type : Multiple Choice
        </h3>
        {{#each multipleChoice as |question|}} {{#isSameCompetency @index
        question.competency.title ../multipleChoice}}
        <h2 class="text-[#1C9CF6] text-sm font-semibold mt-10 aller">
          {{question.competency.title}}
        </h2>
        {{/isSameCompetency}}
        <div class="mt-5 break-inside-avoid-page">
          <p class="fc-dark text-xs border-b question pb-2 aller">
            Q{{concat @index 1}} {{question.text}}
          </p>
          <div class="flex justify-between items-center mt-3">
            <div class="w-[49%]">
              <div id={{concat 'multipleChoiceQuestion' @index}}></div>
              <script>
                renderMultipleChoiceChart({{{question.responses1}}},{{@index}},{{{question.names}}})
              </script>
            </div>
            <div class="w-[49%]">
              <table class="w-full" aria-label="simple table">
                <thead>
                  <tr>
                    <td
                      class="text-[#242424] text-center w-[80px] text-[10px] py-[3px] bg-[#EFEFEF]"
                    ></td>
                    {{{../raters}}}
                  </tr>
                </thead>
                <tbody>
                  {{#each question.responses as | response |}}
                  <tr class="border-b">
                    <td
                      class="py-[5px] px-3 text-[10px] text-[#242424] border-b-0 aller"
                    >
                      R{{concat @index 1}}
                    </td>
                    {{{renderRows ../../categories response}}}
                  </tr>
                  {{/each}}
                </tbody>
              </table>
            </div>
          </div>
       
          <div
            class="flex p-2 justify-start flex-wrap items-start bg-primary-light"
          >
            {{#each question.responses as | response |}}
            <div class="fc-dark text-[10px] w-1/3 px-3 my-1 aller">
              <span class="text-primary aller">R{{concat @index 1}}</span> -
              {{response.label}}
            </div>
            {{/each}}
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>

