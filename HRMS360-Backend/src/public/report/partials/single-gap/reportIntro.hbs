<div class="dont-break w-[210mm] h-[297mm] mx-auto aller p-5">
  <div class="border p-5 relative h-full">
    <div class="absolute top-0 right-0">
      <img
        src="/report/single-gap/images/reportRightCurv.png"
        width="59px"
        alt="right-curv"
        height="59px"
      />
    </div>
    <div class="w-[352px] mx-auto mt-10 mb-14 aller">
      <div
        class="w-full flex justify-center items-center border-b-2 border-secondary pb-2"
      >
        <img
          src="/report/single-gap/images/zunoks_logo.png"
          width="236.91px"
          height="80px"
          alt="zunoks-logo"
        />
      </div>
      <div>
        <p class="text-center text-lg mt-2 text-[#4D4D4D] font-bold aller">
          Employee 360 feedback report
        </p>
      </div>
    </div>
    <div class="flex justify-center items-center flex-col aller">
      <p class="text-xs aller">Generated for:</p>
      <p class="text-lg aller text-primary mt-5">{{introDetail.name}}</p>
      <p class="text-xs aller">{{introDetail.designation.name}}</p>
      <p class="text-xs aller">
        {{introDetail.email}}
        {{#if introDetail.contact}}
          |
          {{introDetail.contact}}
        {{/if}}
      </p>
    </div>
    <div class="mt-20">
      <p class="text-[#242424] text-xs pb-3 aller">
        Report generated on
        {{genratedAt}}
        :
      </p>
      <div>
        <table style="min-width: 650;width:100%;" aria-label="simple table">
          <thead>
            <tr class="border-b">
              <td
                class="text-[#242424] text-xs py-4 px-[10px] bg-[#F9F9F9] aller"
              >
                Respondent Name
              </td>
              <td
                class="text-[#242424] text-xs py-4 px-[10px] bg-[#F9F9F9] aller"
              >
                Respondent Details
              </td>
              <td
                class="text-[#242424] text-xs py-4 px-[10px] bg-[#F9F9F9] aller"
              >
                Relationship with Employee
              </td>
              <td
                class="text-[#242424] text-xs py-4 px-[10px] bg-[#F9F9F9] aller"
              >
                Response Date
              </td>
            </tr>
          </thead>
          <tbody class="aller">
            {{#each introDetail.surveyRespondants as |row|}}
              <tr class="border-b">
                <td class="p-[10px] border-b-0">
                  <p class="text-xs aller text-[#242424]">
                    {{row.respondant.name}}
                  </p>
                  <p class="text-xs aller text-[#828282]">
                    {{row.respondant.designation.name}}
                  </p>
                </td>
                <td class="p-[10px] border-b-0">
                  <p class="text-xs aller text-[#828282]">
                    {{row.respondant.email}}
                  </p>
                  <p class="text-xs aller text-[#828282]">
                    {{row.respondant.contact}}
                  </p>
                </td>
                <td class="p-[10px] text-xs aller border-b-0 text-[#828282]">
                  {{row.rater.name}}
                </td>
                <td class="p-[10px] text-xs aller border-b-0 text-[#828282]">
                  {{getFormatedDate row.response_date}}
                </td>
              </tr>
            {{/each}}
            {{#each introDetail.surveyExternalRespondants as |row|}}
              <tr class="border-b h-[53px]">
                <td class="p-[10px] border-b-0">
                  <p class="text-xs aller text-[#242424]">
                    {{row.respondant_name}}
                  </p>
                </td>
                <td class="p-[10px] border-b-0">
                  <p class="text-xs aller text-[#828282]">
                    {{row.respondant_email}}
                  </p>
                </td>
                <td class="p-[10px] text-xs aller border-b-0 text-[#828282]">
                  {{row.rater.name}}
                </td>
                <td class="p-[10px] text-xs aller border-b-0 text-[#828282]">
                  {{getFormattedDate row.response_date}}
                </td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
    <div class="py-1 px-24 mt-16 border border-red-500">
      <p class="text-xs aller text-center text-red-500">
        All rights reserved. This is a confidential and proprietary information
        of ZUNOKS group. Duplication in any form is strictly prohibited without
        written consent from ZUNOKS group.
      </p>
    </div>
  </div>
</div>